{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es7", "es2017.object"],
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "configs/*": ["configs/*"],
      "actions/*": ["store/actions/*"],
      "reducers/*": ["store/reducers/*"],
      "sagas/*": ["store/sagas/*"],
      "selectors/*": ["store/selectors/*"],
      "services/*": ["services/*"],
      "store/*": ["store/*"],
      "models/*": ["models/*"],
      "src/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
